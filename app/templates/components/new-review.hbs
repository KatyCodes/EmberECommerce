{{#if addNewReview}}
  <h3>new review of {{model.name}}</h3>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Your name:</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="rating">Rate 1-5:</label>
        {{input value=rating id="rating"}}
      </div>
      <div class="form-group">
        <label for="content">Addtl info:</label>
        {{textarea value=content id="content"}}
      </div>
      <button id="saveReview" {{action 'saveReview'}}>Save</button>
    </form>
  </div>
{{else}}
  <button id="newReview" {{action 'reviewFormShow'}}>Add Review</button>
{{/if}}
